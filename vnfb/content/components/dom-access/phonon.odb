from vnfb.components.DOMAccessor import DOMAccessor as base

class Accessor(base):


    def __init__(self):
        super(Accessor, self).__init__('phonon-accessor')
        return


    def getPhonons(self, atomicstructure):
        db = self.db
        return atomicstructure.phonons.dereference(db, status='n')


    def getDOSes(self, atomicstructure):
        db = self.db
        return atomicstructure.phonondoses.dereference(db)



from vnfb.dom.material_simulations.Phonons import Phonons, PhononsTable
from vnfb.dom.material_simulations.PhononDOS import PhononDOS, PhononDOSTable


def accessor():
    return Accessor()


