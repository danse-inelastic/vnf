    def selectTrajectory(self, director):
        doc = lc.document(id='trajectory-selector-doc')
        doc.paragraph(
            text=['Please select a trajectory:',]
            )
        container = lc.document(id='trajectory-selector-container')
        doc.add(container)
        container.oncreate = [
            select(element=container).append(
              load(actor='analysis/selecttrajectory', routine='createListView')
              ),
            ]
        # select button
        b = lc.button(label='select'); doc.add(b)
        #b.onclick = getInfoAndProceed()
        b.onclick = load(actor = 'analysis/mdanalysiswizard', 
                       routine = 'analysisSettings',
                  trajectoryId = select(id='trajectory-table').table('getIdentifiersForSelectedRow', colname='selectone'),
                  analysisType = self.inventory.analysisType)
        return doc

