"""
start page for gulp optimization workflow
"""

import luban.content as lc
from luban.content import load, select, alert


def visual(atomicstructure=None, director=None):
    """atomicstructure: id of atomic structure
    """
    # create a new optimization and then bring out the editor

    # matter
    matterdomaccess = director.retrieveDOMAccessor('atomicstructure')
    matter = matterdomaccess.getAtomicStructure(atomicstructure)
    # create and save to db
    from vnfb.dom.material_simulations.GulpOpt import GulpOpt
    obj = GulpOpt()
    obj.matter = matter
    director.clerk.orm.save(obj)
    # assign creator
    record = director.clerk.orm(obj)
    record.creator = director.sentry.username
    director.clerk.db.updateRecord(record)
    #
    id = record.id
    return director.retrieveVisual(
        'material_simulations/moldyn/optimization-editor',
        id = id,
        director = director,
        )


# version
__id__ = "$Id$"

